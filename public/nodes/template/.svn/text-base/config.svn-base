##
## Configuration for public/nodes/template
##
import "public/profile/standard"
import "public/config/screenrc"
import "public/config/rclocal"
import "public/config/toprc"
import "public/config/network"

import "public/config/vimrc"

import "public/config/hostname"
import "public/service/postgresql"

import "public/service/ssh"
import "public/config/ssh-key-root"
import "public/service/postfix"
import "public/service/disk-space-monitor"

import "public/service/fail2ban"
import "public/config/fstab"

#import "public/service/thttpd"

[settings.public/service/disk-space-monitor]
check += "/|50"

[settings.public/config/hostname]
hostname = "template"

[settings.public/config/ssh-key-root]
authorized_keys += "ssh-rsa  tdn"

[settings.public/service/postfix]
myhostname = "template.vineyard.sikkerhed.org"
root_destination = "foo@vineyard.sikkerhed.org"

[settings.public/config/fstab]
mount["proc"] = dict(
    src ="proc",
    dst ="/proc",
    type="proc",
    opts=["defaults"],
    dump="0",
    pass="0")
mount["root"] = dict(
    src ="/dev/hda1",
    dst ="/",
    type="ext3",
    opts=["errors=remount-ro"],
    dump="0",
    pass="1")

[settings.public/config/network]
#iface["eth0"] = dict(
#    address = "10.0.0.6", 
#    netmask = "255.255.255.0", 
#    gateway     = "10.0.0.254"
#    )
iface["eth0"] = dict(type="dhcp")
resolvconf_nameservers = []
resolvconf_domain      = "vineyard.sikkerhed.org"
resolvconf_search      = "vineyard.sikkerhed.org"

resolvconf_nameservers += "10.0.0.50"

