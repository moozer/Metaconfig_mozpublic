##
## Configuration for public/config/subversion
##

[apt]
install += "subversion"
install += "subversion-tools"

[settings]
diff = "/usr/bin/diff"

## Set global-ignores to a set of whitespace-delimited globs
## which Subversion will ignore in its 'status' output, and
## while importing or adding files and directories.
global_ignores = ["*.o", "*.lo", "*.la", "#*#", ".*.rej", "*.rej", ".*~", "*~", ".#*", ".DS_Store", "*.pyc"]

## Set enable-auto-props to 'yes' to enable automatic properties
## for 'svn add' and 'svn import', it defaults to 'no'.
## Automatic properties are defined in the section 'auto-props'.
enable_auto_props = "yes"

## SSL Certificate files
## Include Sikkerhed.org certificate by default, since they host MetaConfig repositories
ssl_certs = ["/etc/subversion/sikkerhedorg.crt"]

props = dict()
## Text file formats
props["Makefile"] = "svn:eol-style=native"
props["*.c"]      = "svn:eol-style=native"
props["*.cpp"]    = "svn:eol-style=native"
props["*.h"]      = "svn:eol-style=native"
props["*.py"]     = "svn:eol-style=native"
props["*.pas"]    = "svn:eol-style=native"
props["*.txt"]    = "svn:eol-style=native"
props["*.conf"]   = "svn:eol-style=native"
props["*.sql"]    = "svn:eol-style=native"
props["*.php"]    = "svn:eol-style=native"
props["*.inc"]    = "svn:eol-style=native"
props["*.xml"]    = "svn:mime-type=text/xml;svn:eol-style=native"
props["*.htm"]    = "svn:mime-type=text/html;svn:eol-style=native"
props["*.html"]   = "svn:mime-type=text/html;svn:eol-style=native"
props["*.css"]    = "svn:mime-type=text/css;svn:eol-style=native"
props["*.js"]     = "svn:mime-type=text/x-javascript;svn:eol-style=native"
props["*.sh"]     = "svn:mime-type=text/x-sh;svn:eol-style=native"
props["*.tex"]    = "svn:mime-type=text/x-tex;svn:eol-style=native"
props["*.patch"]  = "svn:mime-type=text/x-diff"
## Image formats
props["*.gif"]    = "svn:mime-type=image/gif"
props["*.png"]    = "svn:mime-type=image/png"
props["*.jpg"]    = "svn:mime-type=image/jpeg"
props["*.jpeg"]   = "svn:mime-type=image/jpeg"
## Binary formats
props["*.pdf"]    = "svn:mime-type=application/pdf"
## OpenDocument formats
props["*.odp"]    = "svn:mime-type=application/vnd.oasis.opendocument.presentation"
props["*.ods"]    = "svn:mime-type=application/vnd.oasis.opendocument.spreadsheet"
props["*.odt"]    = "svn:mime-type=application/vnd.oasis.opendocument.text"
