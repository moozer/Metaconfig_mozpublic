%header("##")
/var/log/apt/term.log {
  rotate 30
  monthly
  compress
  missingok
  notifempty
}
#if PLATFORM_OS_NAME == "ubuntu" and (PLATFORM_OS_VERSION >= "10") 
  /var/log/apt/history.log {
    rotate 30
    monthly
    compress
    missingok
    notifempty
  }
#end
#if PLATFORM_OS_NAME == "debian" and (PLATFORM_OS_VERSION >= "6")
  /var/log/apt/history.log {
    rotate 30
    monthly
    compress
    missingok
    notifempty
  }
#end
