%header("##")
/var/log/dpkg.log {
	monthly
	rotate 30
	compress
	delaycompress
	missingok
	notifempty
	create 640 root adm
}
#if PLATFORM_OS_NAME == "ubuntu" and (PLATFORM_OS_VERSION >= "10")
  /var/log/alternatives.log {
  	monthly
  	rotate 30
  	compress
  	delaycompress
  	missingok
  	notifempty
  	create 640 root root
  }
#end
#if PLATFORM_OS_NAME == "debian" and (PLATFORM_OS_VERSION >= "6")
  /var/log/alternatives.log {
  	monthly
  	rotate 30
  	compress
  	delaycompress
  	missingok
  	notifempty
  	create 640 root root
  }
#end
