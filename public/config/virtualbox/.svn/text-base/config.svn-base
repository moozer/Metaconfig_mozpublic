##
## Configuration for public/config/virtualbox
##

[apt.source.virtualbox]
url = "http://download.virtualbox.org/virtualbox/debian"
dist = PLATFORM_OS_NICKNAME
components = ["contrib", "non-free"]
keys += "98AB5139"

[apt]
if PLATFORM_OS_NICKNAME in ["oneiric", "precise"]
  install += "virtualbox-4.1"
else
  install += "virtualbox-4.0"
end
