##
## Configuration for public/config/php5
##
[apt]
install += "php5"
#Enable pear?
#install += "php-pear"

[files]
rm += "/etc/php5/conf.d/display-errors.ini"
rm += "/etc/php5/conf.d/expose-php.ini"
rm += "/etc/php5/conf.d/log-errors.ini"

[settings]
values = dict(display_errors = "Off", expose_php = "Off", log_errors = "Off")
