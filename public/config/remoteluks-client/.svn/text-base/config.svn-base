##
## Configuration for public/config/remoteluks-client
##

## All options are mandatory
## Examples
#private_key="/etc/remoteluks/id_rsa"
#remote_user="luks"
#remote_host="keyserver.invalid"
#remote_path="/data/luks/luks-zin/luks-key.dat"
#luks_device="/dev/disk/by-id/scsi-somedisk"
#dm_device="data"
#mount_point="/data"

logfile = "/var/log/remoteluks.log"
debug = 1

[files]
permission["/etc/remoteluks"]    = "0700"
permission["/etc/remoteluks/**"] = "0700"

