##
## Configuration for public/config/emacs
##
if not PLATFORM_OS_APT_BASED
  [files]
  remap["/etc/emacs"] = "/usr/share/emacs/site-lisp"
end

[settings]
setnu_mode   = PLATFORM_OS_DEBIAN or PLATFORM_OS_UBUNTU
anyinit_mode = PLATFORM_OS_DEBIAN or PLATFORM_OS_UBUNTU
misc_fixes   = PLATFORM_OS_DEBIAN or PLATFORM_OS_UBUNTU
x_support    = False
