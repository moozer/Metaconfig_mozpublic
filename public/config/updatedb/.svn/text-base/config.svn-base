##
## Configuration for public/config/updatedb
##

[apt]
install += "mlocate"

[settings]
prunepaths = []
prunepaths += "/tmp"
prunepaths += "/var/spool"
prunepaths += "/media"

prunefs = []
prunefs += "NFS"
prunefs += "nfs"
prunefs += "nfs4"
prunefs += "rpc_pipefs"
prunefs += "afs"
prunefs += "binfmt_misc"
prunefs += "proc"
prunefs += "smbfs"
prunefs += "autofs"
prunefs += "iso9660"
prunefs += "ncpfs"
prunefs += "coda"
prunefs += "devpts"
prunefs += "ftpfs"
prunefs += "devfs"
prunefs += "mfs"
prunefs += "shfs"
prunefs += "sysfs"
prunefs += "cifs"
prunefs += "lustre_lite"
prunefs += "tmpfs"
prunefs += "usbfs"
prunefs += "udf"
prunefs += "fuse.glusterfs"
prunefs += "fuse.sshfs"
prunefs += "curlftpfs"
prunefs += "ecryptfs"
prunefs += "fusesmb"
prunefs += "devtmpfs"

prunenames = []
prunenames += ".git"
prunenames += ".bzr"
prunenames += ".hg"
prunenames += ".svn"

[files]
if PLATFORM_OS_NAME in ["debian", "ubuntu"]
  symlink["/etc/updatedb.findutils.cron.local"] = "/etc/updatedb.conf"
end
