##
## Configuration for public/config/disable-bluetooth
##

import "public/config/rclocal"
import "public/config/modprobe"

## Disables bluetooth in debian and ubuntu systems
[settings.public/config/rclocal]
lines += "echo disable > /proc/acpi/ibm/bluetooth"

[settings.public/config/modprobe]
#Block bluetooth modules
block += ["net-pf-31", "btusb", "bluetooth"]

[apt]
# Remove bluetooth packages
remove += ["bluez", "bluez-alsa", "bluez-cups", "kbluetooth", "obex-data-server"]


