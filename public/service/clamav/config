##
## Configuration for public/service/clamav
##

[apt]
install += ["clamav", "clamav-base", "clamav-daemon", "clamav-freshclam"]

if PLATFORM_OS_NAME == "debian" and PLATFORM_OS_VERSION < "6"
  [settings]
  version = 1

  [apt.source.debian-volatile]
  url = "http://volatile.debian.org/debian-volatile"
  dist = "lenny/volatile"
  components = ["main", "contrib", "non-free"]
else
  [settings]
  version = 2
end

[files]
mkdir += "/data/clamav"

owner["/data/clamav/**"] = "clamav:clamav"
owner["/etc/clamav/freshclam.conf"] = "clamav:adm"

permission["/etc/clamav/freshclam.conf"] = "0444"
