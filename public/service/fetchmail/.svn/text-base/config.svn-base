##
## Configuration for public/service/fetchmail
##

[apt]
install += "fetchmail"

[trigger.restart-fetchmail]
files += "/etc/fetchmailrc"
command = ["invoke-rc.d", "fetchmail", "restart"]

[settings]
daemon_interval = "60"
ssl_fingerprints = ""

[files]
permission["/etc/fetchmailrc"] = "0600"

owner["/etc/fetchmailrc"] = "fetchmail:nogroup"
owner["/data/fetchmail"] = "fetchmail:nogroup"

mkdir += "/data/fetchmail"
