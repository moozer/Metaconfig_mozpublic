##
## Configuration for public/service/nfs-server
##
import "public/service/nfs-client"

[settings]
server_count    = "32"
nfsd_options    = "-N2 -N4 -T"
force_shutdown  = "0"
share           = dict()

[files]
mkdir += "/etc/default/nfs"

[apt]
install += ["nfs-kernel-server", "nfs-common"]
if PLATFORM_OS_NAME == "ubuntu" and (PLATFORM_OS_VERSION == "11.10" or PLATFORM_OS_VERSION >= "12")
  install += "rpcbind"
else
  install += "portmap"
end

[files]
permission["/etc/default/nfs/start-stop-daemon"] = "0755"

[trigger.restart-nfs-kernel-server]
files += "/etc/default/nfs-kernel-server"
files += "/etc/exports"
command = ["invoke-rc.d", "nfs-kernel-server", "restart"]
