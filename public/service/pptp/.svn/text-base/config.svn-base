##
## Configuration for public/service/pptp
##

import "public/config/tcpwrapper"

[apt]
install += "pptpd"

[trigger.restart-pptpd]
files += "/etc/pptpd.conf"
command = ["invoke-rc.d", "pptpd", "restart"]

[settings]
pptp_users = []

[settings.public/config/tcpwrapper]
allow_lines += ["pptpd: ALL"]

[files]
permission["/etc/ppp/chap-secrets"] = "0600"
