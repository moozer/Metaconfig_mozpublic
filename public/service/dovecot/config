##
## Configuration for public/service/dovecot
##

[apt]
install += ["dovecot-imapd", "dovecot-pop3d"]

[settings]
pgsql_db     = "sohosting"
pgsql_user   = "sohostingro"
protocols    = ["imaps", "pop3s"]
mmap_disable = "no"

[files]
permission["/etc/dovecot/dovecot*.conf"] = "0600"

owner["/etc/dovecot/dovecot*.conf"] = "dovecot:root"
