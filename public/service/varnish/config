##
## Configuration for public/service/varnish
##
[apt]
install += "varnish"

[settings]
start = "yes"
listen = ":80"
management = "localhost:6082"
data_dir = "/var/lib/varnish"

[trigger.restart-varnish]
files += "/etc/default/varnish"
files += "/etc/varnish/*"
command = ["/etc/init.d/varnish", "restart"]
