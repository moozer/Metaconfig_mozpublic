##
## Configuration for public/service/hostapd
##

[apt]
# Needed for wlan AP (firmware-ralink requires non-free)
install += ["hostap-utils", "wireless-tools", "wpasupplicant", "hostapd"]
install += "firmware-ralink"

# brctl (used for bridging AP NICs)
install += "bridge-utils"

[settings]
interface   = "wlan0"
bridge      = "br0"
driver      = "nl80211"
ssid        = "opennet"
channel     = "11"
macaddr_acl = "0"
auth_algs   = "1"
ignore_broadcast_ssid = "0"
enable_wpa  = 0
wpa_passphrase = "typewriter"
hw_mode = "g"

[trigger.restart-hostapd]
files += "/etc/hostapd/*"
command = ["invoke-rc.d", "hostapd", "restart"]

