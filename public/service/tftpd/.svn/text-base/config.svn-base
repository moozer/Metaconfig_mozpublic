##
## Configuration for public/service/tftpd
##

[apt]
install += "tftpd-hpa"

[settings]
user        = "tftp"
tftp_root   = "/data/tftp"
listen      = "0.0.0.0:69"
options     = "--secure"

[trigger.restart-tftpd]
files += "/etc/default/tftpd-hpa"
command = ["invoke-rc.d", "tftpd-hpa", "restart"]

