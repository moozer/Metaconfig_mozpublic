%header("##")
## Basic settings
#foreach port in ports
  Port %(port)
#end
AddressFamily %(address_family)
#if listen
  #foreach l in listen
    ListenAddress %(l)
  #end
#end
Protocol 2
HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_dsa_key

## Restrictions
UsePAM %(use_pam)
UsePrivilegeSeparation %(use_privilege_separation)
PermitRootLogin %(permit_root_login)
StrictModes %(strict_modes)
MaxStartups %(maxstartups)
LoginGraceTime %(login_grace_time)
TCPKeepAlive %(tcp_keepalive)

## Subsystems
#if allow_sftp
  #if PLATFORM_OS_YUM_BASED
    Subsystem sftp /usr/libexec/openssh/sftp-server
  #else
    Subsystem sftp /usr/lib/openssh/sftp-server
  #end
#end

## Logging
SyslogFacility AUTH
LogLevel INFO

## Login data
PrintMotd no
PrintLastLog yes
AcceptEnv LANG EDITOR LC_* SOZ_PROFILES

## Login restrictions
IgnoreRhosts yes
ChallengeResponseAuthentication no
PermitEmptyPasswords no
PasswordAuthentication %(password_authentication)
RhostsRSAAuthentication no
HostbasedAuthentication no

PubkeyAuthentication yes

## Forwardings
#if allow_gateway_ports
  GatewayPorts clientspecified
#end
#if allow_x11_forwarding
  X11Forwarding yes
  X11DisplayOffset 10
#end

#foreach m in sshd_match
  Match %(m)
  #foreach line in sshd_match[m]
      %(line)
  #end

#end
