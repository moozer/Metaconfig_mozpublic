##
## Configuration for public/service/nfblock
##

[apt]
install += "moblock"

if PLATFORM_OS_NAME == "ubuntu"
  [apt.source.nfblock]
  url = "http://ppa.launchpad.net/jre-phoenix/ppa/ubuntu"
  dist = PLATFORM_OS_NICKNAME
  keys += "9C0042C8"
  debsrc = True
elif PLATFORM_OS_NAME == "debian"
  [apt.source.nfblock]
  url = "http://moblock-deb.sourceforge.net/debian"
  dist = PLATFORM_OS_NICKNAME
  keys += "C0145138"
  debsrc = True
else
  print_fatal("Only debian or ubuntu supported")
end

[settings]
whitelist_dest = []
