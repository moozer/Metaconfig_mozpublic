##
## Configuration for public/service/ssh-secondary
##

import "public/service/ssh"

[apt]
install += "spye-daemon"

[settings]
permit_root_login   = "yes"
ports               = "22000"
allow_sftp          = "1"
allow_gateway_ports = "1"
allow_x11_forwarding= "1"
maxstartups = "10:30:60"
passwordauthentication = "yes"

[trigger.restart-secondary-sshd]
files += "/etc/ssh/secondary_sshd_config"
command = ["spye", "daemon.restart", "secondary-ssh"]

[files]
symlink["/usr/local/sbin/sshd_secondary"] = "/usr/sbin/sshd"
